<Window x:Class="WATA.LIS.WPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WATA.LIS.WPS"
        mc:Ignorable="d"
        Title="Windows Plafrom data Sender" Height="720" Width="1280">
    <Grid>

        <Label Content="Table RFTAG" HorizontalAlignment="Left" Height="34" Margin="17,4,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>


        <DataGrid x:Name="dgPairListTable" BorderBrush="#FFBBBBBB" BorderThickness="1" ItemsSource="{Binding}" TextBlock.TextAlignment="Center"  RowHeight="20" IsReadOnly="True" FontFamily="맑은고딕"  HorizontalAlignment="Left"  CanUserAddRows="False" CanUserSortColumns="False" AutoGenerateColumns="False" Width="647" OpacityMask="Black" Height="242" VerticalAlignment="Top" Margin="17,38,0,0" FontSize="10" RenderTransformOrigin="0.5,0.5" >
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.326"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.577"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="0.3*" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="0.7*" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dgSendListTable" BorderBrush="#FFBBBBBB" BorderThickness="1" ItemsSource="{Binding}" TextBlock.TextAlignment="Center"  RowHeight="20" IsReadOnly="True" FontFamily="맑은고딕"  HorizontalAlignment="Left"  CanUserAddRows="False" CanUserSortColumns="False" AutoGenerateColumns="False" Width="592" OpacityMask="Black" Height="243" VerticalAlignment="Top" Margin="678,38,0,0" FontSize="8" RenderTransformOrigin="0.5,0.5" >
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.698"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.827"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="0.1*" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="0.9*" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Location RFTAG" HorizontalAlignment="Left" Height="34" Margin="17,294,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>
        <DataGrid x:Name="dgPairListLocation" BorderBrush="#FFBBBBBB" BorderThickness="1" ItemsSource="{Binding}" TextBlock.TextAlignment="Center"  RowHeight="20" IsReadOnly="True" FontFamily="맑은고딕"  HorizontalAlignment="Left"  CanUserAddRows="False" CanUserSortColumns="False" AutoGenerateColumns="False" Width="646" OpacityMask="Black" Height="242" VerticalAlignment="Top" Margin="17,328,0,0" FontSize="10" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="0.3*" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="0.7*" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="dgSendListLocation" BorderBrush="#FFBBBBBB" BorderThickness="1" ItemsSource="{Binding}" TextBlock.TextAlignment="Center"  RowHeight="20" IsReadOnly="True" FontFamily="맑은고딕"  HorizontalAlignment="Left"  CanUserAddRows="False" CanUserSortColumns="False" AutoGenerateColumns="False" Width="591" OpacityMask="Black" Height="243" VerticalAlignment="Top" Margin="678,331,0,0" FontSize="8" RenderTransformOrigin="0.5,0.5" >
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.698"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.827"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="0.1*" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="0.9*" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>





    </Grid>
</Window>
