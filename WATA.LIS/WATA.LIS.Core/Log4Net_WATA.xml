<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <!-- 파일을 사용하는 Appender -->

  <appender name="LogToFile" type="log4net.Appender.FileAppender" >



    <!-- 만들 로그 파일 -->

    <param name="File" value="log-file.txt" />

    <!-- 기존에 로그 파일이 있다면 연결해서 사용 여부 -->

    <param name="AppendToFile" value="true" />

    <!-- 로그 형식 -->

    <layout type="log4net.Layout.PatternLayout">

      <param name="ConversionPattern" value="%date [%thread] %-5level %logger - %message%newline" />

    </layout>

  </appender>

  <appender name="SystemLog" type="log4net.Appender.RollingFileAppender">

    <!-- 로그 파일 이름의 선두 부분 -->

    <File value=".\LOG\SYSTEM_LOG\System" />

    <!-- 기존에 로그 파일이 있다면 연결해서 사용 여부 -->

    <appendToFile value="true" />

    <!-- 날짜 마다 파일을 작성하는 것을 지정 -->

    <rollingStyle value="Composite" />

    <!-- 로그 파일 이름 고정 여부. 고정하지 않을 때는 false -->

    <staticLogFileName value="false" />

    <!-- 파일 이름에의 날짜 부분 -->

    <datePattern value='"_"yyyyMMdd_HH".txt"' />    
    
    <maximumFileSize value="20M" />

    <maxSizeRollBackups value="10" />
    
    <layout type="log4net.Layout.PatternLayout">

      <!-- 로그 형식 -->

      <!--<conversionPattern value="%date [%thread] %logger - %location %message%newline" />-->
      <conversionPattern value="%date [%thread] %message%newline" />
      <!--conversionPattern value="%date [%thread] - %message%newline" />-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    </layout>

  </appender>

