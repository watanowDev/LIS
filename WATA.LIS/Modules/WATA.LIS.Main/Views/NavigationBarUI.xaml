<UserControl x:Class="WATA.LIS.Main.Views.NavigationBarUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WATA.LIS.Main.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:behaviors="clr-namespace:WATA.LIS.Core.Behaviors;assembly=WATA.LIS.Core"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1280">
    <UserControl.Resources>
        <!-- Tokens (match TopBar) -->
        <Thickness x:Key="AppOuterMargin">8,6,8,6</Thickness>
        <CornerRadius x:Key="AppCornerRadius">10</CornerRadius>
        <SolidColorBrush x:Key="PrimaryTranslucentBrush" Color="{DynamicResource Primary500}" Opacity="0.1"/>

        <!-- Rounded container for nav bar to match top bar -->
        <Style x:Key="NavContainer" TargetType="Border">
            <Setter Property="CornerRadius" Value="{StaticResource AppCornerRadius}"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="{StaticResource AppOuterMargin}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern rounded nav radio style with more spacing and selection/hover feedback -->
        <Style x:Key="NavRadioStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource Primary500}"/>
                                <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryTranslucentBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="{DynamicResource Primary500}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Slim top navigation bar -->
    <Border Style="{StaticResource NavContainer}">
        <Grid Height="36">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0" >
                <RadioButton Style="{StaticResource NavRadioStyle}" GroupName="Nav" Tag="MainUI" Checked="NavChecked" ToolTip="Main" Margin="0,0,0,0" IsChecked="True">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Home" Width="18" Height="18" Margin="0,0,6,0"/>
                        <TextBlock Text="Main" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource NavRadioStyle}" GroupName="Nav" Tag="Content_BackEnd" Checked="NavChecked" ToolTip="BackEnd">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Cloud" Width="18" Height="18" Margin="0,0,6,0"/>
                        <TextBlock Text="BackEnd" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource NavRadioStyle}" GroupName="Nav" Tag="Content_Distance" Checked="NavChecked" ToolTip="Height">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Ruler" Width="18" Height="18" Margin="0,0,6,0"/>
                        <TextBlock Text="Height" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource NavRadioStyle}" GroupName="Nav" Tag="Content_Weight" Checked="NavChecked" ToolTip="Weight">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Scale" Width="18" Height="18" Margin="0,0,6,0"/>
                        <TextBlock Text="Weight" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource NavRadioStyle}" GroupName="Nav" Tag="Content_RFID" Checked="NavChecked" ToolTip="RFID">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Nfc" Width="18" Height="18" Margin="0,0,6,0"/>
                        <TextBlock Text="RFID" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>